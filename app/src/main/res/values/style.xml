<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BotonPrimario" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxStrokeColor">@android:color/white</item>
    </style>


    <!-- Estilo para el texto del titulo -->
    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilo general del Toolbar -->
    <style name="ToolbarThemeCustom" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionBarSize">56dp</item>
    </style>

    <!-- Estilo del meni emergente -->
    <style name="PopupMenuTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">@drawable/style_fondo_menu_peronalizado</item> <!-- opcional -->
    </style>

    <style name="PopupMenuTheme1" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/white</item>
        <item name="android:popupBackground">@color/rosa_acento</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenu.TextAppearance</item>
    </style>

    <style name="PopupMenu.TextAppearance" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextoSpinnerItemEstilo" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/rosa_fucsia_suave</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="SpinnerTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/rosa_fucsia_suave</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="SpinnerTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/rosa_fucsia_suave</item>
    </style>

    <style name="toolbarDesplegable" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">@drawable/style_toolbar_button_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SpinnerStyleText" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textColor">#F50057</item>
        <item name="android:textColorHint">#651FFF</item>
        <item name="android:popupBackground">#FFFFFF</item>
        <item name="android:dropDownSelector">@drawable/degradado_rosa</item>
    </style>

    <!-- Tema para el Toolbar -->
    <style name="ToolbarTema" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/rosa_pastel</item>
        <!-- Color cuando se presiona -->
        <item name="colorControlHighlight">@color/rosa_acento</item>
    </style>

    <!-- Estilo para el muni desplegable -->
    <style name="toolbarDesplegable1" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/morado_lila</item>
        <item name="android:textColorPrimary">@color/rosa_acento</item>
        <item name="colorControlNormal">@color/rosa_pastel</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="spacioSolucion" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
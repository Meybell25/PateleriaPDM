<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imgImagenProducto"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:background="@drawable/style_image_redondeada" />

        <!-- Precio -->
        <TextView
            android:id="@+id/lblPrecioProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$25.000"
            android:textSize="18sp"
            android:textColor="@color/rosa"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_gravity="start" />

        <!-- Botones: Editar, Eliminar, Ver -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/btnEditar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/style_circulo2"
                android:src="@drawable/ic_editar"
                android:tint="@color/white"
                android:contentDescription="Editar" />

            <ImageButton
                android:id="@+id/btnEliminar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/style_circulo2"
                android:src="@drawable/ic_eliminar"
                android:tint="@color/white"
                android:contentDescription="Eliminar" />

            <ImageButton
                android:id="@+id/btnVer"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/style_circulo2"
                android:src="@drawable/ic_ojo"
                android:tint="@color/white"
                android:contentDescription="Ver detalles" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

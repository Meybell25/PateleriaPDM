<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/imgImagenPastel"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_pastel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Contenedor de texto -->
        <LinearLayout
            android:id="@+id/llInfoProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/imgImagenPastel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Nombre -->
            <TextView
                android:id="@+id/lblNombrePastel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del pastel"
                android:textColor="@color/morado_oscuro"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Categorioa -->
            <TextView
                android:id="@+id/lblCategoriaPastel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Categoría"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- descripcion -->
            <TextView
                android:id="@+id/lblDescripcionPastel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Descripción del pastel"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <!-- Tamanioo y porciones -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/lblTanoPaste"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Tamano"
                    android:textColor="@color/morado_oscuro"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/lblPorcionesPastel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prociones: 10"
                    android:textColor="@color/rosa"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Precio -->
            <TextView
                android:id="@+id/lblPrecioPastel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$150.00"
                android:textColor="@color/rosa"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />

            <!-- botones del administrador -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="end">


                <!-- btn Editar -->
                <ImageButton
                    android:id="@+id/btnEditarPastel"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/style_circulo2"
                    android:src="@drawable/ic_editar"
                    android:tint="@color/white"
                    android:contentDescription="Editar producto" />

                <!-- btn Eliminar -->
                <ImageButton
                    android:id="@+id/btnEliminarPastel"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/style_circulo2"
                    android:src="@drawable/ic_eliminar"
                    android:tint="@color/white"
                    android:contentDescription="Eliminar producto" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

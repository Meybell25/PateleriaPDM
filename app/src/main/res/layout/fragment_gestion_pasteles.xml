<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsAdmin.GestionPastelesFragment">

    <!-- Espacio reservado para el Toolbar -->
    <Space
        android:id="@+id/spaceForToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card de Bienvenida para Pasteles -->
    <androidx.cardview.widget.CardView
        android:id="@+id/pastelesCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:backgroundTint="@color/rosa_claro"
        app:layout_constraintTop_toBottomOf="@id/spaceForToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Texto de tiitulo-->
        <TextView
            android:id="@+id/lblPastelesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="P A S T E L E S ðŸŽ‚"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="16dp" />

    </androidx.cardview.widget.CardView>

    <!-- Campo de Busqueda -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/pastelesCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/marfil"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iconSearch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:contentDescription="Buscar"
                android:src="@drawable/ic_buscar"
                app:tint="@color/rosa_acento" />

            <EditText
                android:id="@+id/txtBuscarPastel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1"
                android:hint="Buscar pasteles..."
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/rosa_acento"
                android:textColorHint="#80000000"
                android:textSize="16sp"
                app:strokeColor="@color/rosa_claro" />

            <ImageView
                android:id="@+id/iconClear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="Limpiar bÃºsqueda"
                android:focusable="true"
                android:src="@drawable/ic_limpiar"
                android:visibility="gone"
                app:tint="@color/rosa_acento" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>



    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvcPasteles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingHorizontal="8dp"
        android:paddingBottom="80dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="1"
        app:layout_constraintTop_toBottomOf="@id/cardSearch"
        app:layout_constraintBottom_toTopOf="@id/spaceForNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mensaje cuando no hay resultados -->
    <LinearLayout
        android:id="@+id/layoutNoResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/blanco_20"
        app:layout_constraintTop_toTopOf="@id/rvcPasteles"
        app:layout_constraintBottom_toBottomOf="@id/rvcPasteles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_buscar"
            android:alpha="0.5"
            app:tint="@color/rosa_acento" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="No se encontraron pasteles"
            android:textSize="16sp"
            android:textColor="@color/rosa_acento"
            android:alpha="0.7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Intenta con otra bÃºsqueda"
            android:textSize="14sp"
            android:textColor="@color/rosa_fucsia_suave" />

    </LinearLayout>

    <!-- BotÃ³n Agregar Pastel -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnAbrirDialogoPasteles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/rosa_acento"
        android:paddingBottom="16dp"
        android:text="AGREGAR PASTEL"
        android:textColor="@color/white"
        app:icon="@drawable/ic_mas"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/spaceForNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Space
        android:id="@+id/spaceForNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/errorProductos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="86dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:padding="12dp"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icono Cliente -->
        <ImageView
            android:id="@+id/imgClienteSeller"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Nombre Completo -->
        <TextView
            android:id="@+id/lblNombreCompleto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="María Elena Rodríguez García"
            android:textStyle="bold"
            android:textColor="@color/morado_oscuro"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgClienteSeller"
            app:layout_constraintEnd_toStartOf="@id/lblEstadoCliente"
            android:layout_marginStart="12dp" />


        <!-- tel Principal -->
        <TextView
            android:id="@+id/lblTelefonoCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Tel: +503 6027 1616"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/lblNombreCompleto"
            app:layout_constraintTop_toBottomOf="@id/lblNombreCompleto" />


        <!-- Direccion -->
        <TextView
            android:id="@+id/lblDireccionCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Calle 45 # 12-34, Apt 201"
            android:textSize="13sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/lblTelefonoCliente"
            app:layout_constraintStart_toStartOf="@id/lblTelefonoCliente"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2dp" />

        <!-- Estado del Cliente -->
        <TextView
            android:id="@+id/lblEstadoCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTIVO"
            android:textColor="@color/verde_exitoso"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/badge_background_green"
            android:padding="6dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <LinearLayout
            android:id="@+id/layoutEstadisticas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/lblDireccionCliente"
            app:layout_constraintStart_toStartOf="@id/lblDireccionCliente"
            app:layout_constraintEnd_toStartOf="@id/lblEstadoCliente">

            <TextView
                android:id="@+id/lblTotalPedidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 pedidos"
                android:textSize="11sp"
                android:textColor="@color/morado_oscuro"
                android:background="@drawable/badge_background_gray"
                android:padding="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/lblTotalGastado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0 COP"
                android:textSize="11sp"
                android:textColor="@color/morado_oscuro"
                android:background="@drawable/badge_background_gray"
                android:padding="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Cliente Preferencial (Solo si es preferencial) -->
        <TextView
            android:id="@+id/lblClientePreferencial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="⭐ PREFERENCIAL"
            android:textColor="@color/gold"
            android:textSize="11sp"
            android:textStyle="bold"
            android:background="@drawable/badge_background_gold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/layoutEstadisticas"
            app:layout_constraintTop_toBottomOf="@id/layoutEstadisticas" />


        <!-- btn Editar -->
        <ImageButton
            android:id="@+id/btnEditarCliente"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/style_circulo2"
            android:src="@drawable/ic_editar"
            android:tint="@color/white"
            android:contentDescription="Editar cliente"
            app:layout_constraintTop_toBottomOf="@id/layoutEstadisticas"
            app:layout_constraintEnd_toStartOf="@id/btnEliminarCliente" />

        <!-- btn Eliminar -->
        <ImageButton
            android:id="@+id/btnEliminarCliente"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/style_circulo2"
            android:src="@drawable/ic_eliminar"
            android:tint="@color/white"
            android:contentDescription="Eliminar cliente"
            app:layout_constraintTop_toBottomOf="@id/layoutEstadisticas"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
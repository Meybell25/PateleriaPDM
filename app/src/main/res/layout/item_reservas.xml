<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <!-- HEADER DE LA RESERVA -->
        <LinearLayout
            android:id="@+id/llHeaderReserva"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/lblIdReserva"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Reserva #R001"
                android:textColor="@color/morado_oscuro"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblEstadoReserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/style_estado_reserva"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="PENDIENTE"
                android:textColor="@color/amarillo_mantequilla"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- INFO CLIENTE -->
        <LinearLayout
            android:id="@+id/llInfoCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/llHeaderReserva"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_usuario"
                android:tint="@color/rosa_acento"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/lblClienteId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cliente NOMBRE:"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- INFO CREADOR/VENDEDOR -->
        <LinearLayout
            android:id="@+id/llInfoCreador"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/llInfoCliente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_usuario"
                android:tint="@color/rosa_acento"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/lblCreador"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Creada nombre: seller123"
                android:textColor="@color/morado_oscuro"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- FECHA Y HORA DE ENTREGA -->
        <LinearLayout
            android:id="@+id/llInfoEntrega"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/llInfoCreador"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendario"
                android:tint="@color/rosa_acento"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/lblFechaHoraEntrega"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Entrega: 25/05/2025 - 15:30"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- DIRECCION DE ENTREGA -->
        <LinearLayout
            android:id="@+id/llInfoDireccion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/llInfoEntrega"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_ubicacion"
                android:tint="@color/rosa_acento"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/lblDireccionEntrega"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="DirecciÃ³n de entrega"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- ITEMS DEL PEDIDO -->
        <LinearLayout
            android:id="@+id/llInfoItems"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/llInfoDireccion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_pastel"
                    android:tint="@color/rosa_acento"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pasteles:"
                    android:textColor="@color/morado_oscuro"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblTotalItems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(3 items)"
                    android:textColor="@color/rosa_acento"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/lblDetalleItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="28dp"
                android:text="Ver detalles de pasteles..."
                android:textColor="@color/black"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- INFORMACION DE PAGO -->
        <LinearLayout
            android:id="@+id/llInfoPago"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/llInfoItems"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_pago"
                android:tint="@color/rosa_acento"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/lblEstadoPago"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Pago: Pendiente"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- TOTAL Y FECHAS -->
        <LinearLayout
            android:id="@+id/llTotalFechas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/llInfoPago"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblFechaCreacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Creada: 20/05/2025"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/lblUltimaActualizacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actualizada: 21/05/2025"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/lblTotalReserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$450.00 COP"
                android:textColor="@color/rosa"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <!-- NOTAS -->
        <TextView
            android:id="@+id/lblNotasReserva"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nota: Sin azÃºcar adicional"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="italic"
            android:maxLines="2"
            android:ellipsize="end"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/llTotalFechas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- INDICADOR DE VENCIMIENTO -->
        <TextView
            android:id="@+id/lblVencimiento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="â ï¸ VENCIDA"
            android:textColor="@color/rojo_error"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/lblNotasReserva"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- BOTONES DE ACCION -->
        <LinearLayout
            android:id="@+id/llBotonesAccion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/lblVencimiento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- BotÃ³n Ver Detalles
            <ImageButton
                android:id="@+id/btnVerReserva"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/style_circulo2"
                android:src="@drawable/ic_ojo"
                android:tint="@color/white"
                android:contentDescription="Ver detalles" />-->

            <!-- BotÃ³n Editar -->
            <ImageButton
                android:id="@+id/btnEditarReserva"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/style_circulo2"
                android:src="@drawable/ic_editar"
                android:tint="@color/white"
                android:contentDescription="Editar reserva" />



            <!-- BotÃ³n Eliminar -->
            <ImageButton
                android:id="@+id/btnEliminarReserva"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/style_circulo2"
                android:src="@drawable/ic_eliminar"
                android:tint="@color/white"
                android:contentDescription="Eliminar reserva" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
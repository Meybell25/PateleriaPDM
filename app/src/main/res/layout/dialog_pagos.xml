<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado_rosa"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:background="@drawable/style_redondeado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- TITULO -->
        <TextView
            android:id="@+id/lblTituloDialogoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="PROCESAR PAGO"
            android:textColor="#F6F3F3"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- MONTO BASE -->
        <TextView
            android:id="@+id/lblPrecioPastel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monto base:"
            android:textColor="#F6F3F3"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@id/lblTituloDialogoPago"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtPrecioPastel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00 COP"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/lblTituloDialogoPago"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- DESCUENTO -->
        <TextView
            android:id="@+id/lblDescuento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descuento (opcional)"
            android:textColor="#F6F3F3"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@id/lblPrecioPastel"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDescuento"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/lblDescuento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundColor="#33FFFFFF"
            app:boxStrokeColor="@android:color/white"
            app:startIconDrawable="@drawable/ic_descuento"
            app:startIconTint="@android:color/white"
            app:boxCornerRadiusTopStart="24dp"
            app:boxCornerRadiusTopEnd="24dp"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusBottomEnd="24dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtDescuento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Ingrese descuento (COP)"
                android:inputType="numberDecimal"
                android:paddingVertical="16dp"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- IMPUESTO/TAX -->
        <TextView
            android:id="@+id/lblImpuesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Impuesto (opcional)"
            android:textColor="#F6F3F3"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@id/tilDescuento"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilImpuesto"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/lblImpuesto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundColor="#33FFFFFF"
            app:boxStrokeColor="@android:color/white"
            app:boxCornerRadiusTopStart="24dp"
            app:boxCornerRadiusTopEnd="24dp"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusBottomEnd="24dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtImpuesto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Ingrese impuesto (COP)"
                android:inputType="numberDecimal"
                android:paddingVertical="16dp"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- METODO DE PAGO -->
        <TextView
            android:id="@+id/lblMetodoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Método de pago *"
            android:textColor="#F6F3F3"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@id/tilImpuesto"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/layoutMetodoPago"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/spinner_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/lblMetodoPago"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_moneda"
                android:tint="@color/rosa_acento" />

            <Spinner
                android:id="@+id/spinnerMetodoPago"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- ESTADO DEL PAGO -->
        <TextView
            android:id="@+id/lblEstadoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado del pago"
            android:textColor="#F6F3F3"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@id/layoutMetodoPago"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/layoutEstadoPago"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/spinner_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/lblEstadoPago"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:tint="@color/rosa_acento" />

            <Spinner
                android:id="@+id/spinnerEstadoPago"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- RESUMEN DE CALCULO -->
        <View
            android:id="@+id/dividerCalculos"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:background="#33FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/layoutEstadoPago"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/lblResumenCalculos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumen de cálculos"
            android:textColor="#F6F3F3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@id/dividerCalculos"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- MONTO TOTAL FINAL -->
        <TextView
            android:id="@+id/lblMontoTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MONTO TOTAL A PAGAR:"
            android:textColor="#F6F3F3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@id/lblResumenCalculos"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtMontoTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00 COP"
            android:textColor="@color/rosa_acento"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/lblResumenCalculos"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- BOTONES -->
        <LinearLayout
            android:id="@+id/layoutBotonesPago"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/lblMontoTotal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelarPago"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:padding="15dp"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="@color/morado_oscuro"
                app:cornerRadius="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProcesarPago"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:padding="15dp"
                android:text="Procesar Pago"
                android:textAllCaps="false"
                android:textColor="@color/rosa_acento"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#EFE7E7"
                app:cornerRadius="24dp" />
        </LinearLayout>

        <!-- SALIR -->
        <TextView
            android:id="@+id/btnSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@id/layoutBotonesPago"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
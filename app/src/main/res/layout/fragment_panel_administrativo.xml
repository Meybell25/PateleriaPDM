<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:id="@+id/spaceForToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CARD PARA EL TITULO DE LA SECCION EN LA QUE SE ENCUENTRA VIENVENIDA-->
    <androidx.cardview.widget.CardView
        android:id="@+id/welcomeCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:backgroundTint="@color/rosa_claro"
        app:layout_constraintTop_toBottomOf="@id/spaceForToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- IMAGEN DE GATITOO -->
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/white"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/imgCuteKitten"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:src="@drawable/gatito"
                    android:scaleType="centerInside"
                    android:contentDescription="Cute Kitten" />
            </androidx.cardview.widget.CardView>

            <!-- TITULO DE WELCOME -->
            <TextView
                android:id="@+id/lblWelcomeTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Â¡Welcome! ðŸŒ¸"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:gravity="start|center_vertical" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- PRIMERA FILE-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvcItemClientesPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeCard"
        app:layout_constraintBottom_toTopOf="@+id/rvcItemUsauriosPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rvcItemPastenesPanel"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvcItemPastenesPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeCard"
        app:layout_constraintBottom_toTopOf="@+id/rvcItemReservaPanel"
        app:layout_constraintStart_toEndOf="@+id/rvcItemClientesPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1" />

    <!-- SGUNDA FILA -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvcItemUsauriosPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rvcItemClientesPanel"
        app:layout_constraintBottom_toTopOf="@+id/spaceForNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rvcItemReservaPanel"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvcItemReservaPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rvcItemPastenesPanel"
        app:layout_constraintBottom_toTopOf="@+id/spaceForNavigation"
        app:layout_constraintStart_toEndOf="@+id/rvcItemUsauriosPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1" />

    <Space
        android:id="@+id/spaceForNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
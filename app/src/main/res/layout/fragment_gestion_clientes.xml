<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsAdmin.GestionClientesFragment">

    <Space
        android:id="@+id/spaceForToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CARD PARA TITULO -->
    <androidx.cardview.widget.CardView
        android:id="@+id/CardTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/rosa_claro"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/spaceForToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C L I E N T E S 🧑‍💼"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

    <!-- CARD PARA EL BUSCADO OSEA LA BARRITA DE BUSQUEDA -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBuscar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/CardTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- LINERARLAYOUT PARA UBICAR LOS ELEMETOS PARA BUSCAR-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@color/marfil"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconSearch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Buscar"
                android:src="@drawable/ic_buscar"
                app:tint="@color/rosa_acento" />

            <EditText
                android:id="@+id/txtBuscarClientes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1"
                android:hint="Buscar clientes..."
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/rosa_acento"
                android:textColorHint="#80000000"
                android:textSize="16sp"
                app:strokeColor="@color/rosa_claro" />

            <ImageView
                android:id="@+id/iconClear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="Limpiar búsqueda"
                android:focusable="true"
                android:src="@drawable/ic_limpiar"
                android:visibility="gone"
                app:tint="@color/rosa_acento" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- RVC PARA MOSTRAR LOS CLINETES -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvcClientes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingHorizontal="8dp"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/cardBuscar"
        app:layout_constraintBottom_toTopOf="@id/spaceForNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BTN PARA ABRIR DIALOGO DE INSERTAR NUEVO CLINESTE -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnAbrirDialogoClientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/rosa_acento"
        android:text="AGREGAR CLIENTES"
        android:textColor="@color/white"
        android:paddingBottom="16dp"
        app:icon="@drawable/ic_mas"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/spaceForNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553" />

    <Space
        android:id="@+id/spaceForNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- MENDAGE DE ERRO OCULTO-->
    <TextView
        android:id="@+id/lblerrorClientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/morado_oscuro"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardBuscar" />

</androidx.constraintlayout.widget.ConstraintLayout>
